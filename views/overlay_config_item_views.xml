<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_overlay_config_item" model="ir.actions.act_window">
    <field name="name">Overlay Config Items</field>
    <field name="res_model">overlay.config.item</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_overlay_config_item"
            name="Config Items"
            parent="menu_pre_printed_forms_root"
            action="action_overlay_config_item"
            sequence="30"/>

  <record id="view_overlay_config_item_tree" model="ir.ui.view">
    <field name="name">overlay.config.item.tree</field>
    <field name="model">overlay.config.item</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="form_id"/>
      </tree>
    </field>
  </record>

  <record id="view_overlay_config_item_form" model="ir.ui.view">
    <field name="name">overlay.config.item.form</field>
    <field name="model">overlay.config.item</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="form_id"/>
            <field name="config_value"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
