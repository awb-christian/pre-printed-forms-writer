<odoo>
    <record id="action_ir_attachment_pdf" model="ir.actions.act_window">
        <field name="name">PDF Attachments</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('mimetype', '=', 'application/pdf'), ('res_model', '=', False)]</field>
        <field name="context">{'default_mimetype': 'application/pdf'}</field>
    </record>

    <menuitem id="menu_ir_attachment_pdf"
              name="PDF Attachments"
              parent="menu_pre_printed_forms_root"
              action="action_ir_attachment_pdf"
              sequence="20"/>

    <record id="view_ir_attachment_pdf_tree" model="ir.ui.view">
        <field name="name">ir.attachment.pdf.tree</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="res_model"/>
                <field name="res_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_ir_attachment_pdf_kanban" model="ir.ui.view">
        <field name="name">ir.attachment.pdf.kanban</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="mimetype"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
