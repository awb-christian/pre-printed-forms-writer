<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Action -->
  <record id="action_pre_printed_form" model="ir.actions.act_window">
    <field name="name">Pre‑Printed Forms</field>
    <field name="res_model">pre.printed.form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create your first Pre‑Printed Form
      </p>
    </field>
  </record>

  <!-- Menu -->
  <menuitem id="menu_pre_printed_forms_root"
            name="Pre‑Printed Forms" sequence="10"/>
  <menuitem id="menu_pre_printed_form"
            name="Pre-Printed Forms"
            parent="menu_pre_printed_forms_root"
            action="action_pre_printed_form"
            sequence="10"/>
  
  <!-- Tree view -->
  <record id="view_pre_printed_form_tree" model="ir.ui.view">
    <field name="name">pre.printed.form.tree</field>
    <field name="model">pre.printed.form</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_pre_printed_form_form" model="ir.ui.view">
    <field name="name">pre.printed.form.form</field>
    <field name="model">pre.printed.form</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="page_size"/>
            <field name="model_id"/>
            <field name="input_pdf_attachment_id"/>
          </group>
          <group>
            <field name="output_pdf_name"/>
            <button name="process_action" type="object" string="Process" class="oe_highlight"/>
          </group>
          <notebook>
            <page string="Text Items">
              <field name="text_item_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="x"/>
                  <field name="y"/>
                  <field name="config_id"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
